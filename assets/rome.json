{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": false
	},
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 98
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
